@page
@model WebApplication1_Razor_Core_Upsert.Pages.BookList.EditModel
@{
}

<h2 class="text-center text-primary">Edit Book</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Book.Id" />

    <div class="container rounded border">
        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
                <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row p-2 m-2">
            <div class="col-3 offset-3">
                <input type="submit" value="Edit" class="btn btn-outline-dark form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-outline-danger form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>