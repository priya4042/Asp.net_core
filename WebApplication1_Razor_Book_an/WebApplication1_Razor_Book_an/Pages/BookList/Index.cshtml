@page
@model WebApplication1_Razor_Book_an.Pages.BookList.IndexModel
@{
}

<div class="container row border p-2 m-2">
    <div class="col-9">
        <h2 class="text-primary">Books List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info">Create New Book</a>
    </div>


    <div class="row rounded border col-11 p-2 m-4  ">
         @if (Model.Books.Count() > 0)
         {
             <table class="table table-bordered table-striped table-active text-center">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Action</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model.Books)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.ISBN</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
}
            else
            {
                <p>No Book Found</p>
            }

    </div>
</div>