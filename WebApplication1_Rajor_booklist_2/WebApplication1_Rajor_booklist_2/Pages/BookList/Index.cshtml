@model WebApplication1_Rajor_booklist_2.Pages.BookList.IndexModel

<div class="container row border p-2 m-2">
    <div class="col-9">
        <h2 class="text-primary">Book List</h2>

    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info" >Create New Book</a>
    </div>
    </div>

   <!-------------------------------XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX-------------------------------------------------->

<div class="rounded row border p-2 m-2 col-11">

    @if (Model.Books.Count() > 0) 
    { <table class="table table-bordered table-striped table-active">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Action</th>
        </tr>
    </thead>
    
    <tbody>

        <form method="post">
            
            @foreach (var item in Model.Books)
            {
                <tr>

                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.ISBN</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>


                        <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Want to delete?')">Delete</button>

                    </td>

                </tr>

            
            }
        </form>
    </tbody>

</table>}
            else
            {
                <p class="text-info">No Data Found</p>
            }
    

</div>

<h2 class="text-center text-primary">OR</h2>

<div class="container rounded border p-2 m-2">
    <table id ="tblData" class="table table-striped table-bordered table-active text-center">
        <thead>
            <tr>
                <td>Title</td>
                <td>Author</td>
                <td>ISBN</td>
                <td>Action</td>
            </tr>
        </thead>
    </table>

</div>

